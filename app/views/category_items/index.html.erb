<p id="notice"><%= notice %></p>

<h1>Listing Category Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Romaji</th>
      <th>Kana</th>
      <th>Title</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_items.each do |category_item| %>
      <tr>
        <td><%= category_item.romaji %></td>
        <td><%= category_item.kana %></td>
        <td><%= category_item.title %></td>
        <td><%= category_item.category %></td>
        <td><%= link_to 'Show', category_category_item %></td>
        <td><%= link_to 'Edit', edit_category_category_item_path(category_item) %></td>
        <td><%= link_to 'Destroy', category_category_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

