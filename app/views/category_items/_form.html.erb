<%= form_for [@category, @category_item] do |f| %>

    <%= display_errors_for_object @category_item %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, { class: 'form-control', tabindex: 1 } %>
    </div>

    <div class="form-group">
      <%= f.label :kana %><br>
      <%= f.text_field :kana, { class: 'form-control', tabindex: 2 } %>
    </div>

    <div class="form-group">
      <%= f.label :romaji %><br>
      <%= f.text_field :romaji, { class: 'form-control', tabindex: 3 } %>
    </div>

    <div class="form-group">
      <%= f.label 'Current audio clip' %>
      <%= render 'audio_playback' %>
    </div>

    <div class="form-group">
      <%= f.label :audio_clip %><br>
      <%= f.file_field :audio_clip, { tabindex: 4 } %>
    </div>

    <div class="form-group">
      <%= f.submit nil, { class: 'btn btn-primary', tabindex: 5 } %>
    </div>

<% end %>
