<%= form_for @category do |f| %>

    <%= display_errors_for_object @category %>

    <div class="form-group">
      <%= f.text_field :title, { class: 'form-control', placeholder: 'Title', tabindex: 1 } %>
    </div>

    <div class="form-group">
      <%= f.submit nil, { class: 'btn btn-primary', tabindex: 2 } %>
    </div>

<% end %>
