<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @category.title %>
</p>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Kana</th>
    <th>Romaji</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @category_items.each do |category_item| %>
      <tr>
        <td><%= category_item.title %></td>
        <td><%= category_item.kana %></td>
        <td><%= category_item.romaji %></td>
        <td><%= link_to 'Show', category_category_item_path(@category.id, category_item) %></td>
        <td><%= link_to 'Edit', edit_category_category_item_path(@category.id, category_item) %></td>
        <td><%= link_to 'Destroy', category_category_item_path(@category.id, category_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Category item', new_category_category_item_path(@category.id) %> |
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
