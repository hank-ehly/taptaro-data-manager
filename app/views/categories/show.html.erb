<h3>Listing Category Items for '<%= @category.title %>'
  <small><%= link_to '+ New Category item', new_category_category_item_path(@category.id) %></small>
</h3>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Kana</th>
    <th>Romaji</th>
    <th>Options</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @category_items.each do |category_item| %>
      <tr>
        <td><%= link_to category_item.title, category_category_item_path(@category.id, category_item) %></td>
        <td><%= category_item.kana %></td>
        <td><%= category_item.romaji %></td>
        <td><%= link_to 'Edit', edit_category_category_item_path(@category.id, category_item) %></td>
        <td><%= link_to 'Destroy', category_category_item_path(@category.id, category_item), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
